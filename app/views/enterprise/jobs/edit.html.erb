  <div class="unit">
    <div class="page-title">
      <h2>編輯職缺資訊</h2>
      <div class="bolded-line"></div>
    </div>
    <%= form_for @job,url: enterprise_company_job_path(@company,@job), method: :PATCH do |j| %>
      <%= render :partial => 'form', :locals => { :j => j } %>
      <br>
      <div class="login">
        <%= j.submit "修改", :class => "button btn-success medium" %>
