<div class="col-sm-8">
  <div class="unit">
    <div class="page-title">
      <h2>新增職缺</h2>
      <div class="bolded-line"></div>
    </div>
    <br>
    <%= form_for @job ,:url => enterprise_company_jobs_path(@company), method: :post do |j| %>
      <%= render :partial => 'form', :locals => { :j => j } %>
      <div class="login">
        <%= j.submit "新增", :class => "button btn-success medium" %>
        <%= link_to '返回', enterprise_company_jobs_path, :class => "button btn-fail medium" %>
      </div>
    <% end %>
  </div>
</div>
