<div class="col-sm-1"></div>
<div class="col-sm-10">
  <div class="page-title">
    <h2>職缺管理</h2>
    <div class="bolded-line"></div>
    <%= link_to new_enterprise_company_job_path(@company), :class => "btn btn-success btn-sm" do %>
      <i class="fa fa-plus"></i>
      <span>&nbsp;新增職缺</span>
    <% end %>
  </div>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>職缺名稱</th>
        <th>瀏覽次數</th>
        <th>應徵次數</th>
        <th>收藏次數</th>
        <th style="width: 90px">狀態</th>
        <th style="width: 260px"></th>
      </tr>
    </thead>
    <tbody>

      <% @jobs.each do |job| %>
        <tr>
          <td>
            <%= job.name %>
          </td>
          <td></td>
          <td></td>
          <td class="job-status">
           <% if job.status != 'open' %>
              <%= link_to enterprise_company_ban_path(@company.id, :id => job.id, :'close' => 'close'), method: :ban, :class => "btn btn-danger btn-xs" do %>
                <i class="fa fa-ban"></i>
                <span>關閉</span> 
              <% end %>
            <% else job.status != 'close' %>
              <%= link_to enterprise_company_ban_path(@company.id, :id => job.id, :'close' => 'open'), method: :ban, :class => "btn btn-warning btn-xs" do %>
                <i class="fa fa-check"></i>
                <span>開放</span> 
              <% end %>
            <% end %>
          </td>
          <td>
            <%= link_to enterprise_company_job_path(@company,job), :class => "btn btn-success btn-xs" do %>
              <i class="fa fa-eye"></i>
              <span>查看詳細內容</span>
            <% end %>

            <%= link_to edit_enterprise_company_job_path(@company,job), :class => "btn btn-primary btn-xs" do %>
              <i class="fa fa-edit"></i>
              <span>編輯</span>
            <% end %>

            <%= link_to enterprise_company_job_path(@company,job), :method => :delete, data: { confirm:"您確定要刪除該職缺嗎？" }, :class => "btn btn-fail btn-xs" do %>
              <i class="fa fa-trash"></i>
              <span>刪除</span>
            <% end %>
          </td>
      <% end %>
    </tbody>
  </table>  
</div>
<div class="col-sm-1"></div>