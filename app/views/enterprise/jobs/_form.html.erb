<div>
  <%= j.label :name, "職位名稱" %>
  <%= j.text_field :name %>
</div>
<div>
    <%= j.label "職缺標籤 [可複選]" %><br />
    <%= j.collection_check_boxes :tag_ids, @tags, :id, :name do |b| %>
      <div class="collection-check-box">
        <%= b.check_box %>
        <%= b.label  %>
      </div>
    <% end %>
</div>
<div>
  <%= j.label :published_on, "發佈日期" %>
  <%= j.date_field :published_on %>
</div>
<div>
  <%= j.label :content, "職位內容" %>
  <%= j.text_area :content %>
</div>
<div>
  <%= j.label :時薪%>
  <%= j.number_field :hour_salary_floor %> - <%= j.number_field :hour_salary_ceiling %>
  <br>
  <%= j.label :月薪%>
  <%= j.number_field :year_salary_floor %> - <%= j.number_field :year_salary_ceiling %>
  <br>
</div>
  
  
