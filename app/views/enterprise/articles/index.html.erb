<div class="col-sm-1"></div>
<div class="col-sm-10">
  <div class="page-title">
    <h2>文章管理</h2>
    <div class="bolded-line"></div>
    <%= link_to new_enterprise_company_article_path, :class => "btn btn-success btn-sm" do %>
      <i class="fa fa-plus"></i>
      <span>&nbsp;新增文章</span>
    <% end %>
  </div>

  <% @articles.each do |article| %>
  <div class="col-sm-4 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        標題： <%= article.title %>
        <%= link_to "編輯文章", edit_enterprise_company_article_path(@company,article), class:'pull-right' %>
      </div>
      <div class="panel-body">
        內容：<%= simple_format(article.content) %><br>
        撰文者:<%= article.email%><br>
        所屬公司:<%= article.name %>
        <%= link_to "刪除文章", enterprise_company_article_path(@company,article), class:'pull-right',:method => :delete, :data => { :confirm => "確定要刪除文章嗎?" }%>  
      </div>
    </div>    
  </div>

<% end %>

</div>
<div class="col-sm-1"></div>