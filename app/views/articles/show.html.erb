<div class="col-sm-2"></div>
<div class="col-sm-8">
  <div class="page-title">
    <h2><%= @article.title %></h2>
    <div class="bolded-line"></div>
    <% if current_user %>
           <% if !current_user.is_article_fan_of?(@article.id,current_user.id).present? %>
             <%= link_to favorite_article_path(@article), :class => "btn btn-danger btn-sm", method: :post do %>
               <i class="fa fa-heart-o"></i>
                <span>&nbsp;收藏</span>
             <% end %>
           <% else %>
             <%= link_to unfavorite_article_path(@article), :class => "btn btn-danger btn-sm", method: :post do %>
               <i class="fa fa-heart"></i>
                <span>&nbsp;已收藏</span>
             <% end %>
           <% end %>
         <% else %>
           <%= link_to favorite_article_path(@article), :class => "btn btn-danger btn-sm", method: :post do %>
               <i class="fa fa-heart-o"></i>
                <span>&nbsp;收藏</span>
             <% end %>
         <% end %>
  </div>

  <div class="article-info">
    <span>
        <i class="fa fa-pencil">&nbsp;
            <%= link_to company_path(@article.company) do %>
                <%= @article.company.name %>
            <% end %>
        </i>
        <i class="fa fa-calendar">&nbsp;
            <%= @article.created_at.localtime.strftime("%Y/%m/%d") %>
        </i>
    </span>

    <span class="pull-right">
        <i class="fa fa-eye">&nbsp;
            <%= @article.view_count %>
        </i>
    </span>
  </div>

  <div class="article-page-content">
    <%= image_tag @article.banner_url, style:"width:100%; margin-bottom: 40px;" if @article.banner_url %>
    <%= raw(@article.content)%>
    <%#= simple_format @article.content %>
  </div>

</div>
<div class="col-sm-2"></div>