  <div class="page-title">
    <h2>個人履歷</h2>
    <div class="bolded-line"></div>

    <%= form_for @resume,:url => user_resumes_path(current_user.id), method: :post do |f| %>
      <%= f.file_field :attachment , class:'choose-pdf hidden'%>
      <%= f.submit "Save", class:'hidden upload-pdf hidden' %>
    <% end %>
    <a class="btn btn-success btn-sm upload" >
      <i class="fa fa-plus"></i>
      <span>&nbsp;上傳履歷</span>
    </a>
  </div>
  <% if !@resume.errors.empty? %>
    <div class="alert alert-error">
      <ul>
        <% @resume.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

