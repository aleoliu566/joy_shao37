     <tbody>

      <% @jobInfos.each do |jobInfo| %>
        <% resumesStr = "" %>
        <% jobResume = @jobResumes[jobInfo.id.to_s.to_sym] %>
        <% if jobResume != nil %>
          <% jobResume.each do |resume| %>
            <% resumesStr += resume.name.to_s  %>
          <% end %>
        <% end %>      
      <tr>
        <td><%= jobInfo.name %></td>
     <!--    <td><%= jobInfo.content %></td> -->
        <td><%= jobInfo.companyName  %></td>
        <!--  <td><%= jobInfo.resumes.count %></td> -->
        <!-- <td><%=  %></td> -->
        <!-- <td><%= resumesStr %></td> -->
        <td>
            <%= link_to admin_jobs_path, :class => "btn btn-success btn-xs" do %>
              <i class="fa fa-file-text-o"></i>
              <span>查看詳細資訊</span>
            <% end %>
          </td>
         </tr>
      <% end %>
    </tbody>



  </table>
</div>
