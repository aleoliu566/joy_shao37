<div class="col-sm-1"></div>
<div class="col-sm-10">
  <div class="page-title">
    <h2>職缺管理</h2>
    <div class="bolded-line"></div>
  </div>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>職缺名稱</th>
        <th>所屬企業</th>
        <th>瀏覽次數</th>
        <th>應徵次數</th>
        <th>收藏次數</th>
        <th style="width: 140px"></th>      
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.name %></td>
          <td><%= job.company.name %></td>
          <td class="count"><%= job.resumes.count %></td>
          <td class="count"></td>
          <td class="count"></td>
          <td>
            <%= link_to admin_jobs_path, :class => "btn btn-success btn-xs" do %>
              <i class="fa fa-file-text-o"></i>
              <span>查看詳細資訊</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="col-sm-1"></div>