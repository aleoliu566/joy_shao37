<div class="col-sm-10">
  <div class="page-title">
    <h2>職缺管理</h2>
    <div class="bolded-line"></div>
  </div>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>職缺名稱</th>
        <th>所屬企業</th>
        <th>應徵次數</th>
        <th>收藏次數</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.name %></td>
          <td><%= job.company.name %></td>
          <td><%= job.resumes.count %></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
