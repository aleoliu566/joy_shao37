<table class="table table-bordered">
  <% articles.each do |article|%>
    <tr>
      <th>文章標題</th>
      <th>文章內容</th>
      <th>發佈企業</th>
      <th></th>
    </tr>
    <tr>
      <td>
        <%= article.title %>
      </td>
      <td>
        <%= truncate(article.content, length: 17) %>
      </td>
      <td>
        <%= article.company.name%>
      </td>
      <td>
        <%= link_to "編輯文章", edit_admin_article_path(article) %>

        <% if article.article_status == 'auditing' %>
          <span>審核中</span> 
          <%= link_to audit_admin_article_path(article, :article_status=>"pass"), method: :audit, data: {confirm:"確定要讓此篇文章審核通過嗎？"}, :class => "btn btn-success btn-xs" do %>
            <i class="fa fa-check"></i>
            <span>審核通過</span> 
          <% end %>
          <%= link_to audit_admin_article_path(article, :article_status=>"failed"), method: :audit, data: { confirm:"此篇文章審核「未」通過" }, :class => "btn btn-danger btn-xs" do %>
            <i class="fa fa-ban"></i>
            <span>審核未通過</span> 
          <% end %>
        <% elsif  article.article_status == 'pass'%>
          <span>審核通過</span>
        <% else %>
          <span>審核未通過</span>
        <% end %>
        
      </td>
    </tr>
  <% end %>
</table>