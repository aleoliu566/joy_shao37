<p>文章管理</p>

<table class="table table-bordered">
  <% @articles.each do |article|%>
    <tr>
      <td>
        <%= article.title %>
      </td>
      <td>
        <%= article.content %>
      </td>
      <td>
        發布公司:<%= article.company.name%>
      </td>
      <td>
        <%= link_to "編輯文章", edit_admin_article_path(article) %>
      </td>
    </tr>
  <% end %>
</table>