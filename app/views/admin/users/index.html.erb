<div class="col-sm-1"></div>
<div class="col-sm-10">
  <div class="page-title">
    <h2>管理者管理</h2>
    <div class="bolded-line"></div>
    <%= link_to admin_users_path, :class => "btn btn-success btn-sm" do %>
      <i class="fa fa-plus"></i>
      <span>&nbsp;新增管理者</span>
    <% end %>
</div>
<div class="col-sm-1"></div>


<br>
<% @admin_users.each do |u| %>
  <%= u.email%>
  <%= u.role %>
  <div class="cancel-admin-user">
    <%= form_for u,:url => admin_user_path(u), method: :patch do |f| %>
      <%= f.text_field :role%>
      <%= f.submit %>
    <% end %>
  </div>

  <br>
<% end %>

<h3>新增Admin User</h3>
<%= form_tag admin_set_admin_path, method: :patch do %>
  <% cities_array = User.where(role: nil).map { |city| [city.email, city.id] } %>
  <%=select_tag "user_id", options_for_select(cities_array) %>
  <%=submit_tag "確認" %>
<% end %>
