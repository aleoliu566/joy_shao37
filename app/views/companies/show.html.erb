<div class="col-sm-2"></div>
<div class="col-sm-8">
  <h3>
    <%= image_tag @company.logo_url, width: '50px' %>
    <%= @company.name %>
    <div class="pull-right" style="font-size: 12px;">
      <i class="fa fa-eye" aria-hidden="true"></i>：<%= @company.views_count %>
    </div>
  </h3>
  <hr>
  <div>
    <p>關於：<%= @company.about %></p>
    <p>地址：<%= @company.address %></p>
    <p>公司電話：<%= @company.phone %></p>
    <p>公司規模：<%= @company.scale %>人</p>
  </div>
  <hr>
  <h4>目前職缺</h4>

  <% @jobs.each do |job| %>
    <div class="col-md-6 company-job-block">
      <h4>
        <%= job.name %>
        <div class="pull-right" style="font-size: 16px;">
          <i class="fa fa-heart heart-icon-like" aria-hidden="true"></i>
        </div>  
      </h4>
      <p><%= job.content %></p>
      <% tag = job.tag.split(',') %>
      <i class="fa fa-building"></i>
      <% tag.each do |tag| %>
        <%= tag %>
      <% end %> 
      <%= link_to "應徵", check_resume_company_job_path(@company,job) %>
    </div>
  <% end %>
</div>
<div class="col-sm-2"></div>