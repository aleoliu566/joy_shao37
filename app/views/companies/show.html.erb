<div class="col-sm-2"></div>
<div class="col-sm-8">
  <div class="page-title">
    <h2>
      <%= image_tag @company.logo_url, :class => "company-page-logo" %>
      <%= @company.name %>
    </h2>
    <div class="bolded-line"></div>
    <%= link_to root_path, :class => "btn btn-danger btn-sm" do %>
      <i class="fa fa-heart"></i>
      <span>&nbsp;收藏</span>
    <% end %>
  </div>

  <div class="article-info clearfix">
    <span class="pull-right">
        <i class="fa fa-eye">&nbsp;
            <%= @company.views_count %>
        </i>
    </span>
  </div>

  <div class="article-page-content">
    <p>關於：<%= @company.about %></p>
    <p>地址：<%= @company.address %></p>
    <p>公司電話：<%= @company.phone %></p>
    <p>公司規模：<%= @company.scale %>人</p>
  </div>

  <br><br>
  <div class="page-title">
    <h2>目前職缺</h2>
    <div class="bolded-line"></div>
  </div>

  <% @jobs.each do |job| %>
    <%= render 'job', :job => job %>
  <% end %>

</div>
<div class="col-sm-2"></div>