<div class="col-sm-2"></div>
<div class="col-sm-8">

  <div class="page-title">
    <h2>熱門企業</h2>
    <div class="bolded-line"></div>
    <%= link_to companies_path, :class => "btn btn-success btn-sm" do %>
      <i class="fa fa-th-list"></i>
      <span>&nbsp;查看全部</span>
    <% end %>
  </div>
  <% @companies.each do |company| %>
    <div class="col-sm-4 home-company-block">
      <div>
        <% if company.logo_url %>
          <%= image_tag company.logo_url , width:'50px' %>
        <% end %>
        <%= link_to company.name, company_path(company) %>
        <br>
        <p>
          <%= company.about %>
        </p>
      </div>
    </div>
  <%end%>
  <br><br>
  <div class="page-title">
    <h2>熱門職缺</h2>
    <div class="bolded-line"></div>
    <%= link_to jobs_path, :class => "btn btn-success btn-sm" do %>
      <i class="fa fa-th-list"></i>
      <span>&nbsp;查看全部</span>
    <% end %>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>公司名稱</th>
        <th>職缺</th>
        <th>標籤</th>
        <th>應徵</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |j| %>
        <tr>
          <th><%= j.company.name%></th>
          <th><%= j.name%></th>
          <th>

          <% tag = j.tag.split(',') %>
          <% tag.each do |tag| %>
          <%= tag %>
          <% end %> 

          </th>
          <th><%= link_to "應徵", check_resume_company_job_path(j.company,j) %></th> 
        </tr>
      <% end %>
    </tbody>
  </table>  
  <br><br>
  <div class="page-title">
    <h2>熱門文章</h2>
    <div class="bolded-line"></div>
    <%= link_to articles_path, :class => "btn btn-success btn-sm" do %>
      <i class="fa fa-th-list"></i>
      <span>&nbsp;查看全部</span>
    <% end %>
  </div>
  <ul class="article">
    <% @articles.each do |article| %>
    <li>
      <div class="article-title">
        <%= link_to article.title , article_path(article) %>
      </div>
      <div class="article-content">
        <%= article.content %> 
      </div>
    </li>
    <% end %>
  </ul>
</div>
<div class="col-sm-2"></div>