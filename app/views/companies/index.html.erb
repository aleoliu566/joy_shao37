<div class="col-sm-2"></div>
<div class="col-sm-8">
  <div class="page-title">
    <h2>企業總覽</h2>
    <div class="bolded-line"></div>
  </div>
  <div class="company-search-block">
    <%= form_tag companies_path, method: :get do %>
      <div class="col-sm-11">
        <%= text_field_tag :search, params[:search], placeholder: "Search..." %>        
      </div>
      <div class="col-sm-1 company-search-btn">
        <%= submit_tag "Search", name: nil , class:'btn btn-success btn-sm'%>
      </div>
    <% end %>
  </div>
  <div>
    <% @companies.each do |company| %>
      <div class="col-sm-4">
        <%= link_to company_path(company) do %>
            <%= image_tag company.logo_url , width:'50px' if company.logo_url %>
            <h3><%= company.name %></h3>
            <%= company.about %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="col-sm-2"></div>